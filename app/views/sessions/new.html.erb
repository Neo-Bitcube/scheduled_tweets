<h1>Log In</h1>

<%= form_with model: @user, url: session_path do |form| %>
    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "neo@bitcube.com" %>
    </div>
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
    <div class="mb-3">
        <%= form.submit "Log In", class: "btn btn-primary" %>
    </div>
<% end %>

<%= link_to "Forgot your Password", password_reset_path %>