<h1>Update Password</h1>

<%= form_with model: current_user, url: password_path do |form| %>
   <%= render "shared/form_errors", form: form %>
  <div class="mb-3">
        <%= form.label :password_challenge, "Current Password" %>
        <%= form.password_field :password_challenge, class: "form-control", placeholder: "Password" %>
    </div>
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
    <div class="mb-3">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Password Again" %>
    </div>
    <div class="mb-3">
        <%= form.submit "Update password", class: "btn btn-primary" %>
    </div>
<% end %>